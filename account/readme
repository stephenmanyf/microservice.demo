#package into jar file
$ mvn clean package

#build docker image
#$ docker build -t stephenman/microservices.account .
$ docker build --build-arg=target/*.jar -t stephenman/microservices.account .

#build a tagged docker image
$ ./mvnw install dockerfile:build

#run this docker image
$ docker run -d -p 8080:8080 --name ms-account stephenman/microservices.account:latest

#Push to dockerhub
$ docker push stephenman/microservices.account:latest

#Setup rabbitMQ
exchange name
queue name
routing key for binding

#Start up rabbitMQ
$ docker run -d --hostname my-rabbit --name rabbitmq -p 5672:5672 -p 15672:15672 rabbitmq:3-management
